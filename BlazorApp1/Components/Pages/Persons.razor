@page "/persons"
@using BlazorApp1.Data
@using Microsoft.AspNetCore.Components.Forms

<h3>Persons</h3>

<p class="lead">Manage a simple SQLite-backed list of persons.</p>

<EditForm Model="newPerson" OnValidSubmit="AddPersonAsync">
    <div class="row g-2 mb-3">
        <div class="col-md-3">
            <InputText class="form-control" @bind-Value="newPerson.FirstName" placeholder="First name" />
        </div>
        <div class="col-md-3">
            <InputText class="form-control" @bind-Value="newPerson.LastName" placeholder="Last name" />
        </div>
        <div class="col-md-2">
            <InputSelect class="form-select" @bind-Value="newPerson.Gender">
                <option value="">Gender</option>
                <option>Male</option>
                <option>Female</option>
                <option>Other</option>
            </InputSelect>
        </div>
        <div class="col-md-2">
            <InputDate class="form-control" @bind-Value="newPerson.Birthday" />
        </div>
        <div class="col-md-2">
            <InputText class="form-control" @bind-Value="newPerson.City" placeholder="City" />
        </div>
        <div class="col-md-2 mt-2">
            <InputText class="form-control" @bind-Value="newPerson.Country" placeholder="Country" />
        </div>
    </div>

    <button class="btn btn-primary mb-3" type="submit">Add Person</button>
</EditForm>

@if (isLoading)
{
    <p><em>Loading...</em></p>
}
else if (persons.Count == 0)
{
    <p><em>No persons found.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Gender</th>
                <th>Birthday</th>
                <th>City</th>
                <th>Country</th>
                <th style="width:120px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in persons)
            {
                <tr>
                    <td>@p.FullName</td>
                    <td>@p.Gender</td>
                    <td>@(p.Birthday.HasValue ? p.Birthday.Value.ToString("yyyy-MM-dd") : "")</td>
                    <td>@p.City</td>
                    <td>@p.Country</td>
                    <td>
                        <button class="btn btn-sm btn-danger" @onclick="() => RemovePersonAsync(p.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private PersonEntity newPerson = new();
    private List<PersonEntity> persons = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await PersonsRepository.InitializeAsync();
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        isLoading = true;
        persons = await PersonsRepository.GetAllAsync();
        isLoading = false;
        StateHasChanged();
    }

    private async Task AddPersonAsync()
    {
        // Basic validation: require first and last name
        if (string.IsNullOrWhiteSpace(newPerson.FirstName) || string.IsNullOrWhiteSpace(newPerson.LastName))
            return;

        await PersonsRepository.AddAsync(newPerson);

        // reset form
        newPerson = new PersonEntity();
        await LoadAsync();
    }

    private async Task RemovePersonAsync(int id)
    {
        await PersonsRepository.RemoveAsync(id);
        await LoadAsync();
    }
}