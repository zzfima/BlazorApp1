@page "/persons"
@using BlazorApp1.Data
@inject NavigationManager Navigation

<h3>Persons</h3>

<p class="lead">Manage a simple SQLite-backed list of persons.</p>

<div class="mb-3">
    <input @bind="newName" class="form-control" placeholder="Full name" />
</div>
<button class="btn btn-primary mb-3" @onclick="AddPersonAsync">Add Person</button>

@if (isLoading)
{
    <p><em>Loading...</em></p>
}
else if (persons.Count == 0)
{
    <p><em>No persons found.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th style="width:120px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in persons)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>
                        <button class="btn btn-sm btn-danger" @onclick="() => RemovePersonAsync(p.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private string newName = string.Empty;
    private List<PersonEntity> persons = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await PersonsRepository.InitializeAsync();
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        isLoading = true;
        persons = await PersonsRepository.GetAllAsync();
        isLoading = false;
        StateHasChanged();
    }

    private async Task AddPersonAsync()
    {
        var name = (newName ?? string.Empty).Trim();
        if (string.IsNullOrEmpty(name))
            return;

        await PersonsRepository.AddAsync(name);
        newName = string.Empty;
        await LoadAsync();
    }

    private async Task RemovePersonAsync(int id)
    {
        await PersonsRepository.RemoveAsync(id);
        await LoadAsync();
    }
}